# =============================================================================
# CIA DASHBOARD - DEVELOPMENT
# =============================================================================
# Sobrescreve .env para ambiente de desenvolvimento.
# Apps rodam no host (localhost), infra roda no Docker.

NODE_ENV=development
ENVIRONMENT=development

# =============================================================================
# URLs Publicas (apps rodam local)
# =============================================================================
# Nota: Next.js nao interpola variaveis, usar valores diretos
APP_BASE_URL=http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8002
NEXT_PUBLIC_SOCKET_URL=http://localhost:8001

# =============================================================================
# Rotas internas ao ecossistema
# =============================================================================
APP_INERNAL_URL=http://localhost:${PORT}
BACKBONE_INERNAL_URL=http://localhost:${BACKBONE_PORT}
SOCKET_INERNAL_URL=http://localhost:${SOCKET_PORT}
WA_SIM_INTERNAL_URL=http://localhost:8003
WA_SIM_UI_INTERNAL_URL=http://localhost:8004

# =============================================================================
# Hosts (localhost - apps fora do Docker conectam via portas expostas)
# =============================================================================
POSTGRES_MAIN_HOST=localhost
POSTGRES_MAIN_PORT=8050
POSTGRES_ANALYTICS_PORT=8058
POSTGRES_ANALYTICS_HOST=localhost
MONGO_HOST=localhost
REDIS_HOST=localhost
MEILISEARCH_HOST=localhost
N8N_HOST=localhost
EVOLUTION_HOST=localhost
OLLAMA_HOST=localhost

# =============================================================================
# Database URLs (localhost com portas expostas)
# =============================================================================
POSTGRES_MAIN_URL=postgresql://${POSTGRES_MAIN_USER}:${POSTGRES_MAIN_PASSWORD}@localhost:${POSTGRES_MAIN_PORT}/${POSTGRES_MAIN_DB}
POSTGRES_ANALYTICS_URL=postgresql://${POSTGRES_ANALYTICS_USER}:${POSTGRES_ANALYTICS_PASSWORD}@localhost:${POSTGRES_ANALYTICS_PORT}/${POSTGRES_ANALYTICS_DB}
MONGO_URL=mongodb://${MONGO_USER}:${MONGO_PASSWORD}@localhost:${MONGO_PORT}/${MONGO_DB}?authSource=admin
REDIS_URL=redis://localhost:${REDIS_PORT}
MEILISEARCH_URL=http://localhost:${MEILISEARCH_PORT}
N8N_WEBHOOK_URL=http://localhost:${N8N_PORT}
EVOLUTION_API_URL=http://localhost:${EVOLUTION_PORT}
OLLAMA_URL=http://localhost:${OLLAMA_PORT}

# =============================================================================
# MySQL exernal (configuracao local de desenvolvimento)
# =============================================================================
# Se tiver dump local, configurar aqui
# Senao, usar .env.secrets com SSH tunnel
MYSQL_HOST=localhost
MYSQL_PORT=3306

# =============================================================================
# JWT (valor de desenvolvimento - NUNCA usar em producao)
# =============================================================================
JWT_SECRET=dev-secret-key-change-this-in-production-32chars

# =============================================================================
# Meilisearch (sem master key em dev)
# =============================================================================
MEILISEARCH_MASTER_KEY=

# =============================================================================
# Rate Limiting (mais permissivo em dev)
# =============================================================================
RATE_LIMIT_MAX=1000

# =============================================================================
# Logging (verbose em dev)
# =============================================================================
LOG_LEVEL=debug
