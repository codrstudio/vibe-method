# =============================================================================
# CIA DASHBOARD - PRODUCTION
# =============================================================================
# Sobrescreve .env para ambiente de produção.
# CRITICAL: Todas as secrets devem estar em .env.secrets

NODE_ENV=production
ENVIRONMENT=production

# =============================================================================
# Domain (pode ser sobrescrito em .env.secrets)
# =============================================================================
DOMAIN=example.com

# =============================================================================
# URLs Publicas (via Traefik)
# =============================================================================
APP_BASE_URL=https://${DOMAIN}
NEXT_PUBLIC_API_URL=https://${DOMAIN}/api
NEXT_PUBLIC_SOCKET_URL=https://${DOMAIN}

# =============================================================================
# Hosts (containers internos - usa valores do .env base)
# =============================================================================
# Nao precisa sobrescrever - .env base ja tem os hostnames corretos

# =============================================================================
# MySQL exernal (via SSH tunnel em produção)
# =============================================================================
# Credenciais completas em .env.secrets
MYSQL_SSH=true

# =============================================================================
# n8n (webhook externo via Traefik)
# =============================================================================
N8N_WEBHOOK_URL=https://${DOMAIN}/n8n

# =============================================================================
# Meilisearch (precisa de master key em production)
# =============================================================================
# MEILISEARCH_MASTER_KEY definido em .env.secrets
MEILI_ENV=production

# =============================================================================
# n8n Protocol (HTTPS em production)
# =============================================================================
N8N_PROTOCOL=https

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_MAX=100

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=warn
